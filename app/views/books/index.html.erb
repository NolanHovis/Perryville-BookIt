<h1>Books Listing Page</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th>Actions</th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.description %></td>
      <td><%= link_to 'Edit', edit_book_path(book)%></td>
      <td><%= link_to 'Show', book_path(book)%></td>
      <td><%= link_to 'Delete', book_path(book), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= link_to 'Create Book', new_book_path %>